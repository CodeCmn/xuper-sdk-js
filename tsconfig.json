{
    "include": ["src", "types"],
    "compilerOptions": {
        "target": "ES5",
        "module": "esnext",
        "lib": [
          "dom",
          "esnext",
          "es2015.promise"
        ],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "*": ["src/*", "node_modules/*"]
        },
        "jsx": "react",
        "esModuleInterop": true
    }
}
